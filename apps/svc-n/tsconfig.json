{
  "extends": "@monorepo/tsconfig/nest.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "types": ["node", "jest"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": ["node_modules", "dist"] 
}